    <div class="row justify-content-center formcss">
        <form class="col-lg-6 col-sm-8 border rounded p-5" method="POST" action="/hours/<%=doc._id%>?_method=PUT">
            <div class="row text-center">
                <h3>Editing <%=doc.name%> Hours</h3>
            </div>
            <div class="form-group">
                <label class="mt-2">Update Hours</label>
                <input type="text" name="hours" class="form-control mt-2" aria-describedby="emailHelp" placeholder="Enter Hours">
            </div>
            <button type="submit" class="btn btn-outline-success mt-2">Submit</button>
        </form>
    </div>
</div>
