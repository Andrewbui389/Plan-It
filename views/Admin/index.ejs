<%-include('../partials/header.ejs')%> 
<div class="container-fluid containerWidth">
    <div class="row ms-1">
        <div class="display-6 ">Staff Members</div>
    </div>
    <div class="row mainHeight mainScreen overflow-auto">
        <div class="d-flex col-12 flex-wrap">
            <% employees.forEach((x) => { %>
            <div class="card border-secondary m-2 employeeCardLarge">
                <div class="card-body text-secondary">
                <h5 class="card-title"><%= x.name %></h5>
                <p class="card-text">Started: <%= x.createdAt.toLocaleDateString()%> </p>
                <a class="btn btn-outline-success" href="#">Additional Info</a>
                </div>
            </div>
            <% }) %>
        </div>
    </div>
    <div class="row ms-1">
        <div class="display-6 ">Dash Boards</div>
    </div>
    <div class="row justify-content-evenly mainHeight">
        <div class="col-sm-2 col-med-6 col-lg-6 mainScreen">
            <table class="table table-dark text-left tableSet">
                <thead>
                    <tr>
                    <th scope="col">Employee</th>
                    <th scope="col">Account Status</th>
                    </tr>
                </thead>
                <tbody>
                    <%employees.forEach(x => {%>
                        <tr>
                            <td> <%= x.email %> </td>
                            <td> <%= x.googleId ? 'Activated' : 'Not Activated' %> </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
            <table class="table table-dark tableSet">
                <thead>
                    <tr>
                        <th scope="col">Employee</th>
                        <th scope="col">Hours Worked for the Month</th>
                        <th scope="col">Amount Owed</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>test</td>
                        <td>test</td>
                        <td>test</td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="col-sm-2 col-med-6 col-lg-6 mainScreen">
            <table class="table table-dark text-left tableSet">
                <thead>
                    <tr>
                    <th scope="col">Employee</th>
                    <th scope="col">Clocked In</th>
                    <th scope="col">Clocked Out</th>
                    </tr>
                </thead>
                <tbody>
                    <%hours.forEach(x => {%>
                        <tr>
                            <td> <%= x.name %> </td>
                            <td> <%= x.clockedIn.toLocaleString() %> </td>
                            <%if(x.clockedOut) { %>
                            <td> <%= x.clockedOut.toLocaleString() %> </td>
                            <% } %>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>
</div>

<%-include('../partials/footer.ejs')%> 