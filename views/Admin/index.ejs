<%-include('../partials/header.ejs')%> 
<div class="container-fluid">
    <div class="row">
        <div class="col-12 d-flex justify-content-center">
            <h1>Admin Dash Board</h1>
        </div>
    </div>
    <div class="row justify-content-evenly">
        <div class="col-sm-3 col-med-4 col-lg-4">
            <table class="table table-dark">
                <thead>
                    <tr>
                    <th scope="col">Employee</th>
                    <th scope="col">Account Status</th>
                    </tr>
                </thead>
                <tbody>
                    <%employees.forEach(x => {%>
                        <tr>
                            <td> <%= x.email %> </td>
                            <td> <%= x.googleId ? 'Activated' : 'Not Activated' %> </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
            <table class="table table-dark">
                <thead>
                    <tr>
                    <th scope="col">Employee</th>
                    <th scope="col">Hours Worked for the Month</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <th>test</th>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="col-sm-3 col-med-4 col-lg-4">
            <table class="table table-dark">
                <thead>
                    <tr>
                    <th scope="col">Employee</th>
                    <th scope="col">Clocked In</th>
                    <th scope="col">Clocked Out</th>
                    </tr>
                </thead>
                <tbody>
                    <%hours.forEach(x => {%>
                        <tr>
                            <td> <%= x.name %> </td>
                            <td> <%= x.clockedIn.toLocaleString() %> </td>
                            <%if(x.clockedOut) { %>
                            <td> <%= x.clockedOut.toLocaleString() %> </td>
                            <% } %>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>
</div>
<%-include('../partials/footer.ejs')%> 