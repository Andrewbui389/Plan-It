<%-include('../partials/header.ejs')%> 
<div class="container">
    <div class="row justify-content-center formcss">
        <form class="col-lg-6 col-sm-8 border rounded p-5" method="POST" action="/search">
            <div class="row text-center">
                <h3>Search For Dates</h3>
            </div>
            <div class="form-group">
                <label class="mt-2">From</label>
                <input type="date" name="from" class="form-control mt-2" aria-describedby="emailHelp" required>
            </div>
            <div class="form-group">
                <label class="mt-2">To</label>
                <input type="date" name="to" class="form-control mt-2" aria-describedby="emailHelp" required>
            </div>
            <button type="submit" class="btn btn-outline-success mt-2">Submit</button>
        </form>
    </div>
    <%if (!data) { %>  
    <% } else { %>
    <div class="row mainHeight justify-content-center mt-1">
        <div class="col-sm-1 col-med-6 col-lg-6 mainScreen tableSet">
            <a class="btn btn-outline-primary" href="/search/download">Download Schedules</a>
            <table class="table table-dark text-left">
                <thead>
                    <tr>
                        <th scope="col">Employee</th>
                        <th scope="col">Day Worked</th>
                        <th scope="col">Hours</th>
                    </tr>
                </thead>
                <tbody>
                    <% data.forEach(x => { %>
                        <tr>
                            <td><%= x.name %></td>
                            <td><%= x.createdAt.toLocaleDateString()%></td>
                            <td><%= x.totalHours %></td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>
    <%}%>
</div>
<%-include('../partials/footer.ejs')%> 